<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('./inc/head')%>

    <style>
      .signup-blog {
        display: flex;
        flex-direction: column;
        background-color: #d8ff94;

        border-radius: 8px;
        width: 600px;
        margin: 75px auto;
        justify-content: space-between;
        align-items: center;
        gap: 30px;
        padding: 15px;
      }

      p {
        font-size: 25px;
      }

      form {
        display: flex;
        flex-direction: column;
        gap: 30px;
      }

      .input-div {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 15px;
        margin: auto;
      }

      input {
        border-radius: 8px;
        width: 300px;
        height: 35px;
        border: none;
        transition: ease-in 0.2s;
      }

      #username:hover {
        width: 305px;
        height: 38px;
        transition: ease-in 0.2s;
      }

      #mail:hover {
        width: 305px;
        height: 38px;
        transition: ease-in 0.2s;
      }

      #password:hover {
        width: 305px;
        height: 38px;
        transition: ease-in 0.2s;
      }

      #password:active {
        width: 500px;
        height: 38px;
        transition: ease-in 0.2s;
      }

      .buttons {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      #button {
        width: 100px;
        height: 45px;
        border-radius: 10px;
        border: none;
        transition: ease-in 0.2s;
      }

      #button:hover {
        width: 110px;
        height: 50px;
        background-color: aquamarine;
        transition: ease-in 0.2s;
      }
    </style>
  </head>
  <body>
    <%-include('./inc/navbar')%>

    <div class="signup-blog">
      <p>Giriş Yap</p>

      <form action="" method="post">
        <div class="input-div">
          <input
            id="username"
            type="text"
            name="username"
            placeholder="Kullanıcı Adı"
          />
          <input
            id="password"
            type="password"
            name="password"
            placeholder="Parola"
          />
        </div>

        <div class="buttons">
          <input id="button" type="submit" value="Giriş Yap" />
        </div>
      </form>
    </div>
  </body>
</html>
